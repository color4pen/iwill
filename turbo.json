{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "lib/**"],
      "env": [
        "DATABASE_URL",
        "NEXTAUTH_URL",
        "NEXTAUTH_SECRET",
        "LINE_CLIENT_ID",
        "LINE_CLIENT_SECRET",
        "NODE_ENV",
        "CDK_DEFAULT_ACCOUNT",
        "CDK_DEFAULT_REGION"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "cdk:synth": {
      "dependsOn": ["build"],
      "cache": false
    },
    "cdk:deploy": {
      "dependsOn": ["build"],
      "cache": false
    },
    "cdk:diff": {
      "dependsOn": ["build"],
      "cache": false
    }
  }
}
